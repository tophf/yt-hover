{
  "name": "YouTubeâ„¢ on Hover Preview",
  "short_name": "ihvyoutube",
  "description": "View YouTube while hovering mouse over a YouTube link on any website",
  "author": "tophf",
  "version": "1.0.9",
  "manifest_version": 3,
  "minimum_chrome_version": "99",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "optional_permissions": [
    "history"
  ],
  "background": {
    "service_worker": "bg/bg.js"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "exclude_matches": ["https://www.youtube.com/embed/*"],
    "js": ["content/hover.js"],
    "all_frames": true,
    "match_origin_as_fallback": true
  }],
  "web_accessible_resources": [{
    "matches": ["*://*/*"],
    "resources": ["content/player*.mjs"],
    "use_dynamic_url": true
  }],
  "icons": {
    "16": "ui/icon/16.png",
    "32": "ui/icon/32.png",
    "48": "ui/icon/48.png",
    "64": "ui/icon/64.png",
    "128": "ui/icon/128.png",
    "256": "ui/icon/256.png"
  },
  "action": {
    "default_popup": "ui/options.html"
  },
  "key": ""
}
